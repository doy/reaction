[%

PROCESS field_base;

control_block = 'checkbox_control';

BLOCK checkbox_control;

  %]<input type="checkbox" id="[% id_attr %]" [%
    connect_control(self, 'value');
    process_attrs(attrs);
    IF self.value;
      ' checked="checked"';
    END;
    UNLESS attrs.value;
      ' value="1"';
    END;
  %] />[%

END;

%]
