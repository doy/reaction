=for layout widget

<table>
  [% header %]
<tbody>
  [% rows %]
</tbody>
<tfoot>
  [% footer %]
</tfoot>
</table>

=for layout header

<thead>
  [% content %]
</thead>

=for layout header_row

<tr>
  [% content %]
</tr>

=for layout header_cell

<th> [% content %] </th>

=for layout footer

<tfoot>
  [% content %]
</tfoot>

=for layout footer_row

<tr> [% content %] </tr>

=for layout footer_cell

<td> [% content %] </td>

=for layout rows

<tbody>
  [% content %]
</tbody>

=cut
